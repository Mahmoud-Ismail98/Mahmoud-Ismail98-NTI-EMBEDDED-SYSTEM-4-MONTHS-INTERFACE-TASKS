#ifndef TIMER0_CFG_H_
#define TIMER0_CFG_H_

/*********************************************************************************/
/*
 * Choose Timer mode
 *		Normal_MODE
		Phase_CorrectPWM_MODE
		CTC_MODE
		FastPWM_MODE
 *
 * */
#define TIMER0_MODE				Normal_MODE
/*********************************************************************************/

/*
 * Choose CTC PWM mode
 *   CTC_PWMOUTMODE_1
 	 CTC_PWMOUTMODE_2
 	 CTC_PWMOUTMODE_3
	 CTC_PWMOUTMODE_4
 *
 * */
#define	CTC_PWMOUTMODE			CTC_PWMOUTMODE_1
/*********************************************************************************/

/*
 * Choose prescaller
 *
 NO_ClockSource
 No_prescaller
 Prescaller_8
 Prescaller_64
 Prescaller_256
 Prescaller_1024
 EXTERNAL_OnFallingEdge
 EXTERNAL_OnRISINGEdge

 			*/
#define	Clock_PRESCALLER		Prescaller_8
/*********************************************************************************/

/*Choose 		OVERFLOW_INT - COMPARE_MATCH_INT */
#define	TIMER0_interrupt		OVERFLOW_INT



#endif
